---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Thank You - Meta3Ventures">
	<main class="page-container">
		<div class="thank-you-container">
			<h1>Thank You for Applying!</h1>
			<p>We've received your application and will review it shortly. You should receive a confirmation email with next steps.</p>
			<a href="/" class="home-button">Return to Home</a>
		</div>
	</main>
</Layout>

<style>
	.thank-you-container {
		text-align: center;
		max-width: 600px;
		margin: 4rem auto;
		padding: 2rem;
		background: rgba(var(--accent-dark), 0.1);
		border-radius: 8px;
	}
	.home-button {
		display: inline-block;
		margin-top: 2rem;
		padding: 1rem 2rem;
		background: rgb(var(--accent));
		color: white;
		text-decoration: none;
		border-radius: 8px;
		transition: all 0.3s ease;
	}
	.home-button:hover {
		background: rgb(var(--accent-light));
		transform: translateY(-2px);
	}
</style>