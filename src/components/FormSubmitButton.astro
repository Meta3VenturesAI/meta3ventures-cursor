---
interface Props {
  text: string;
  loading?: boolean;
  disabled?: boolean;
}

const { text, loading = false, disabled = false } = Astro.props as Props;
---

<button 
  type="submit" 
  class="submit-button" 
  disabled={disabled || loading}
  aria-busy={loading}
  aria-disabled={disabled || loading}
>
  <span class="button-text" style={loading ? 'visibility: hidden' : ''}>{text}</span>
  {loading && <span class="loading-spinner" aria-hidden="true"></span>}
</button>

<style>
  .submit-button {
    position: relative;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.375rem;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .submit-button:disabled {
    background-color: #6c757d;
    cursor: not-allowed;
  }
  .button-text {
    visibility: visible;
  }
  .loading-spinner {
    position: absolute;
    width: 1rem;
    height: 1rem;
    border: 2px solid #fff;
    border-top: 2px solid #007bff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>---
