---
interface Props {
  title: string;
  excerpt: string;
  slug: string;
  image?: string;
  date?: string;
  category?: string;
  type: 'blog' | 'resource';
}

const { title, excerpt, slug, image, date, category, type } = Astro.props;
const href = `/${type}/${slug}`;
---

<article class="post-card">
  <a href={href} class="post-link">
    {image && (
      <div class="post-image" style={`background-image: url(${image})`}>
        {category && <span class="category-tag">{category}</span>}
      </div>
    )}
    <div class="post-content">
      <h3>{title}</h3>
      <p class="excerpt">{excerpt}</p>
      <div class="post-meta">
        {date && (
          <time datetime={date}>
            {new Date(date).toLocaleDateString()}
          </time>
        )}
        <span class="read-more">Read More â†’</span>
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-5px);
    border-color: rgba(99, 102, 241, 0.3);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }

  .post-link {
    text-decoration: none;
    color: var(--text);
  }

  .post-image {
    height: 200px;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .category-tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(99, 102, 241, 0.9);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    backdrop-filter: blur(5px);
  }

  .post-content {
    padding: 1.5rem;
  }

  h3 {
    font-size: 1.5rem;
    margin: 0 0 1rem;
    color: var(--text);
  }

  .excerpt {
    color: var(--text-muted);
    margin: 0 0 1.5rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .read-more {
    color: var(--accent);
    font-weight: 500;
    transition: gap 0.3s ease;
  }

  .post-card:hover .read-more {
    gap: 0.75rem;
  }
</style>